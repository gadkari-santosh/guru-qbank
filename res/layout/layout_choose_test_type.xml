<android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res/com.san.guru"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:textColor="@color/Black"
    app:columnCount="3" >

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:background="@color/SteelBlue"
        app:columnCount="1" >

        <TextView
            android:id="@+id/txtTestType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_gravity="left|center_vertical"
            app:layout_row="0"
            android:text="@string/choose_text_type"
            android:textColor="@color/WhiteSmoke" />
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="center"
        app:layout_row="1"
        app:columnCount="2"
        android:color="@color/Black" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="1"
            android:orientation="vertical" >

             <RadioGroup
                 android:id="@+id/radioGroup1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Practice Test" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timed Test" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rapid Fire" />
            </RadioGroup>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                app:layout_column="0"
                app:layout_gravity="center|center"
                app:layout_row="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textNumQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:layout_column="0"
                    app:layout_row="0"
                    android:text="Number of Questions "
                    android:textColor="#000" />

                <NumberPicker
                    android:id="@+id/numberPicker1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/chkBoxNegMarking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Negative Marking" />

            <CheckBox
                android:id="@+id/chkBoxEqualWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Equal Weightage to all subjects" />

           
        </LinearLayout>
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_column="0"
        app:layout_gravity="bottom|bottom"
        app:layout_row="2"
        android:background="@color/Black"
        app:columnCount="1" >

        <Button
            android:id="@+id/butTrdTypNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="right|top"
            android:background="@color/Black"
            android:drawableTop="@drawable/button_next_question"
            android:text="START"
            android:textColor="@color/button_color"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/butTrdTypPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:background="@color/Black"
            android:drawableTop="@drawable/button_prev_question"
            android:text="BACK"
            android:textColor="@color/button_color"
            android:textSize="10sp"
            android:textStyle="bold" />
    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.GridLayout>