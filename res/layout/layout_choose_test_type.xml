<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res/com.san.guru"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/WhiteSmoke"
     android:textColor="@color/Black"
    app:columnCount="3" >

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:background="@color/SteelBlue"
        app:columnCount="1">
        
         <TextView
            android:id="@+id/txtTestType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_column="0"
            app:layout_gravity="left|center_vertical"
            app:layout_row="0"
            android:text="@string/choose_text_type"
            android:textColor="@color/WhiteSmoke" />
         
     </android.support.v7.widget.GridLayout>
    
     <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="center"
        android:color="@color/Black"
        app:layout_row="1"
        app:columnCount="2">
         
         <CheckBox
	        android:id="@+id/chkBoxPracTest"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        app:layout_column="0"
	        app:layout_gravity="left|top"
	        app:layout_row="1"
	        android:text="Practise Test" />  
         
         <TextView
            android:id="@+id/txtVwSubjects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_column="0"
            app:layout_gravity="left|center_vertical"
            app:layout_row="0"
            android:text="@string/choose_text_type"
            android:textColor="@color/WhiteSmoke" />
         
    </android.support.v7.widget.GridLayout>
    
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_column="0"
        app:layout_gravity="left|bottom"
        app:layout_row="2"
        android:background="@color/SteelBlue"
        app:columnCount="1">
         
        <Button
            android:id="@+id/butTrdTypNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_column="0"
            app:layout_gravity="right|top"
            app:layout_row="0"
            android:background="@drawable/button"
            android:ellipsize="none"
            android:text=" Start Test "
            android:textColor="@color/SteelBlue" />
        
        <Button
            android:id="@+id/butTrdTypPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:background="@drawable/button"
            android:ellipsize="none"
            android:text=" Previous "
            android:textColor="@color/SteelBlue" />
    </android.support.v7.widget.GridLayout>
</android.support.v7.widget.GridLayout>
