<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res/com.san.guru"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_row="2"
    android:background="@color/White"
    android:textColor="@color/AppColor"
    app:columnCount="1" >

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="center_horizontal|fill_vertical"
        app:layout_row="1"
        app:columnCount="1"
        android:color="@color/Black" >

        <TextView
            android:id="@+id/marquee_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AEB404"
            android:cursorVisible="false"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:scrollbars="horizontal"
            android:singleLine="true"
            android:textColor="#ffffff" />

        <ListView
            android:id="@+id/listViewSubjects"
            android:layout_width="fill_parent"
             android:textColor="@color/AppColor"
            android:layout_height="fill_parent" />
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="bottom|bottom"
        app:layout_row="2"
        android:background="@color/DarkBlack"
        app:columnCount="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_gravity="fill_horizontal"
            android:background="@color/DarkBlack"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonMe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_gravity="center|top"
                android:background="@color/Black"
                android:drawableTop="@drawable/ic_action_me_active"
                android:text="ME"
                android:textColor="@color/button_color"
                android:textSize="10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_column="0"
                app:layout_gravity="center|top"
                app:layout_row="0"
                android:background="@color/Black"
                android:drawableTop="@drawable/ic_action_settings"
                android:text="SETTINGS"
                android:textColor="@color/button_color"
                android:textSize="10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonDownload"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_column="0"
                app:layout_gravity="center|top"
                app:layout_row="0"
                android:background="@color/Black"
                android:drawableTop="@drawable/ic_action_download"
                android:text="DOWNLOAD"
                android:textColor="@color/button_color"
                android:textSize="10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_column="0"
                app:layout_gravity="center|top"
                app:layout_row="0"
                android:background="@color/Black"
                android:drawableTop="@drawable/ic_action_next_active"
                android:text="NEXT"
                android:textColor="@color/button_color"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.GridLayout>
</android.support.v7.widget.GridLayout>