<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res/com.san.guru"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_row="3"
    android:background="@color/WhiteSmoke"
    android:textColor="@color/Black"
    app:columnCount="1">

    <android.support.v7.widget.GridLayout android:id="@+id/grid_1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="1"
        android:background="@color/SteelBlue"
        app:columnCount="1" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_column="0"
            app:layout_gravity="left|center_vertical"
            app:layout_row="0"
            android:text="@string/choose_question_instruction"
            android:textColor="@color/WhiteSmoke" />
        
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_2"
        android:layout_width="wrap_content"
        android:layout_height="372dp"
        app:layout_column="0"
        app:layout_gravity="center"
        app:layout_row="2"
        app:columnCount="1"
        android:color="@color/Black" >

            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_column="0"
        app:layout_gravity="bottom|bottom"
        app:layout_row="3"
        android:background="@color/SteelBlue"
        app:columnCount="1" >

        <Button
            android:id="@+id/butSubmitSkillSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_column="0"
            app:layout_gravity="right|top"
            app:layout_row="0"
            android:background="@drawable/button"
            android:ellipsize="none"
            android:text=" Next "
            android:textColor="@color/SteelBlue" />
        
    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.GridLayout>