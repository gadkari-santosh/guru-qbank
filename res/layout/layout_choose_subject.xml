<android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res/com.san.guru"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_row="3"
    android:background="@color/WhiteSmoke"
    android:textColor="@color/Black"
    app:columnCount="1">

    <android.support.v7.widget.GridLayout android:id="@+id/grid_1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="1"
        android:background="@color/SteelBlue"
        app:columnCount="1" >

        <TextView
            android:id="@+id/txtViewInstruction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_gravity="left|center_vertical"
            app:layout_row="0"
            android:text="@string/choose_question_instruction"
            android:textColor="@color/WhiteSmoke"
            android:typeface="normal" />
        
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="center"
        app:layout_row="2"
        app:columnCount="1"
        android:color="@color/Black" >

            <ListView
                android:id="@+id/listViewSubjects"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_column="0"
        app:layout_gravity="bottom|bottom"
        app:layout_row="3"
        android:background="@color/Black"
        app:columnCount="1" >
            
        <Button
            android:id="@+id/buttonMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="left|top"
            android:background="@color/Black"
            android:drawableTop="@drawable/ic_action_me_active"
            android:text="ME"
            android:textColor="@color/button_color"
            android:textSize="10dp"
            android:textStyle="bold" />
              
        <Button
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="right|top"
            app:layout_row="0"
            android:background="@color/Black"
            android:drawableTop="@drawable/ic_action_next_active"
            android:text="NEXT"
            android:textColor="@color/button_color"
            android:textSize="10dp"
            android:textStyle="bold" />
        
          <Button
            android:id="@+id/buttonDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="center|center"
            app:layout_row="0"
            android:background="@color/Black"
            android:drawableTop="@drawable/ic_action_download"
            android:text="DOWNLOAD"
            android:textColor="@color/button_color"
            android:textSize="10dp"
            android:textStyle="bold" />
    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.GridLayout>