<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res/com.san.guru"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/WhiteSmoke"
     android:textColor="@color/Black"
    app:columnCount="3" >

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_column="0"
        app:layout_gravity="left|top"
        app:layout_row="0"
        android:background="@color/MidnightBlue"
        app:columnCount="1" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|center_vertical"
            app:layout_row="0"
            android:text="Question 1/50"
            android:textColor="@color/WhiteSmoke" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="right|center_vertical"
            app:layout_row="0"
            android:text="Time 00:00:00"
            android:textColor="@color/WhiteSmoke" />

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:background="@color/SteelBlue"
            app:columnCount="1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_gravity="left|center_vertical"
                app:layout_row="0"
                android:text="Question 1/50"
                android:textColor="@color/WhiteSmoke"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_column="0"
                app:layout_gravity="right|center_vertical"
                app:layout_row="0"
                android:text="Time 00:00:00"
                android:textColor="@color/WhiteSmoke" />

        </android.support.v7.widget.GridLayout>
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="center"
        android:color="@color/Black"
        app:layout_row="1"
        app:columnCount="2" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/qScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="horizontal|vertical" >

                <TextView
                    android:id="@+id/txtQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black" 
                    android:text="TextView" />
            </ScrollView>

            <RadioGroup
                android:id="@+id/option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@android:color/transparent"
                android:textColor="@color/Black"
                android:visibility="visible" >

            </RadioGroup>
        </LinearLayout>
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_column="0"
        app:layout_gravity="left|bottom"
        app:layout_row="2"
        android:background="@color/SteelBlue"
        app:columnCount="1" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="right|top"
            android:layout_margin="5dp"
            app:layout_row="0"
            android:background="@drawable/button"
            android:ellipsize="none"
            android:text=" Next "
            android:textColor="@color/SteelBlue" />
         <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="center|top"
            android:layout_margin="5dp"
            app:layout_row="0"
             android:background="@drawable/button"
            android:ellipsize="none"
            android:text=" Pause "
            android:textColor="@color/SteelBlue" />
          <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            android:layout_margin="5dp"
            app:layout_row="0"
            android:background="@drawable/button"
            android:ellipsize="none"
            android:text=" Previous "
            android:textColor="@color/SteelBlue" />

    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.GridLayout>