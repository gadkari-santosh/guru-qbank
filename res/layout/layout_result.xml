<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res/com.san.guru"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:textColor="@color/Black"
    app:columnCount="2" >

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="center"
        app:layout_row="1"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="horizontal|vertical"
        app:columnCount="1"
        android:color="@color/Black" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/txtVwScore"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="20dp"
                android:background="@drawable/edges"
                android:gravity="center"
                android:padding="5dp"
                android:text="test"
                android:textColor="@color/WhiteSmoke"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVwPace"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="20dp"
                android:background="@drawable/edges"
                android:gravity="center"
                android:padding="5dp"
                android:text="Pace \n\n 5 q/m"
                android:textColor="@color/WhiteSmoke"
                android:textStyle="bold" />
        </LinearLayout>
     <ScrollView
                android:id="@+id/qScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="horizontal|vertical" >
       
        <TableLayout
            android:id="@+id/subjectTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_column="0"
            app:layout_gravity="left|fill_vertical"
            app:layout_row="1" >
        </TableLayout>
</ScrollView>
        <LinearLayout
            android:id="@+id/smLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:gravity="bottom|bottom" >

            <ImageButton
                android:id="@+id/imgBFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:layout_column="0"
                app:layout_row="1"
                android:background="@color/WhiteSmoke"
                android:src="@drawable/ic_facebook" />

            <ImageButton
                android:id="@+id/imgBLinkedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:layout_column="0"
                app:layout_row="1"
                android:background="@color/WhiteSmoke"
                android:src="@drawable/ic_linkedin" />
        </LinearLayout>
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/grid_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_column="0"
        app:layout_gravity="bottom|bottom"
        app:layout_row="3"
        android:background="@color/Black"
        app:columnCount="1" >

        <Button
            android:id="@+id/butQuitTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="left|top"
            android:background="@color/Black"
            android:drawableTop="@drawable/button_end_test"
            android:text="QUIT"
            android:textColor="@color/button_color"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/butFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="center|top"
            app:layout_row="0"
            android:background="@color/Black"
            android:drawableTop="@drawable/button_email"
            android:text="FEEDBACK"
            android:textColor="@color/button_color"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/butReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="right|top"
            app:layout_row="0"
            android:background="@color/Black"
            android:drawableTop="@drawable/button_review"
            android:text="REVIEW"
            android:textColor="@color/button_color"
            android:textSize="10sp"
            android:textStyle="bold" />
    </android.support.v7.widget.GridLayout>

</android.support.v7.widget.GridLayout>