<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res/com.san.guru"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/WhiteSmoke"
     android:textColor="@color/Black"
    app:columnCount="2" >
    
    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="center"
        app:layout_row="1"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="horizontal|vertical"
        app:columnCount="1"
        android:color="@color/Black" >
    
	<RelativeLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtVwScore"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:background="@drawable/edges"
            android:gravity="center"
            android:padding="5dp"
            android:text="test"
            android:textColor="@color/WhiteSmoke"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVwPace"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:background="@drawable/edges"
            android:gravity="center"
            android:padding="5dp"
            android:text="Pace \n\n 5 q/m"
            android:textColor="@color/WhiteSmoke"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/chart"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtVwPace"
            android:layout_weight="0.81"
            android:layout_margin="20dp"
            android:orientation="horizontal" >
        </LinearLayout>
        </RelativeLayout>

	</android.support.v7.widget.GridLayout>
	
     <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_column="0"
        app:layout_gravity="left|bottom"
        app:layout_row="2"
        android:background="@color/SteelBlue"
        app:columnCount="1">
         
          <LinearLayout
            android:layout_width="match_parent"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@color/Black"
            android:layout_height="match_parent"
            app:layout_gravity="fill_horizontal"
            android:orientation="horizontal" >
        <Button
            android:id="@+id/butQuitTest"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/Black"
            android:drawableTop="@drawable/button_end_test"
            android:text="QUIT"
            android:textStyle="bold"
            android:textSize="10sp"
            app:layout_gravity="center|top"
            android:textColor="@color/button_color" />
        
        <Button
            android:id="@+id/butRetest"
            style="@color/SteelBlue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_gravity="center|top"
            android:background="@color/Black"
            android:drawableTop="@drawable/button_social_media"
            android:fitsSystemWindows="true"
            android:text="SOCIAL MEDIA"
            android:textColor="@color/button_color"
            android:textSize="10sp"
            android:textStyle="bold" />
        
        <Button
            android:id="@+id/butTrdTypPrev"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/Black"
            android:drawableTop="@drawable/button_review"
            android:text="REVIEW"
            android:textStyle="bold"
            android:textSize="10sp"
            app:layout_gravity="center|top"
            android:textColor="@color/button_color" />
        </LinearLayout>
        
    </android.support.v7.widget.GridLayout>
</android.support.v7.widget.GridLayout>
