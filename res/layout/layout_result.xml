<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res/com.san.guru"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/WhiteSmoke"
     android:textColor="@color/Black"
    app:columnCount="2" >
    
    <android.support.v7.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_gravity="center"
        app:layout_row="1"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="horizontal|vertical"
        app:columnCount="1"
        android:color="@color/Black" >
    
	<RelativeLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtVwScore"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:background="@drawable/edges"
            android:gravity="center"
            android:padding="5dp"
            android:text="test"
            android:textColor="@color/WhiteSmoke"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVwPace"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:background="@drawable/edges"
            android:gravity="center"
            android:padding="5dp"
            android:text="Pace \n\n 5 q/m"
            android:textColor="@color/WhiteSmoke"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/chart"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtVwPace"
            android:layout_weight="0.81"
            android:orientation="horizontal" >
        </LinearLayout>
        </RelativeLayout>

	</android.support.v7.widget.GridLayout>
	
     <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_column="0"
        app:layout_gravity="left|bottom"
        app:layout_row="2"
        android:background="@color/SteelBlue"
        app:columnCount="1">
         
        <Button
            android:id="@+id/butTrdTypNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_column="0"
            app:layout_gravity="right|top"
            app:layout_row="0"
            android:background="@drawable/button"
            android:ellipsize="none"
            android:text=" Quit Test "
            android:textColor="@color/SteelBlue" />
        <Button
            android:id="@+id/butRetest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="0"
            android:background="@drawable/button"
            android:ellipsize="none"
            android:text=" Retest "
            android:textColor="@color/SteelBlue" />
        
        <Button
            android:id="@+id/butTrdTypPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:background="@drawable/button"
            android:ellipsize="none"
            android:text=" Review "
            android:textColor="@color/SteelBlue" />
    </android.support.v7.widget.GridLayout>
</android.support.v7.widget.GridLayout>
